<%= link_to "Home", root_path, :id => "homebttn" %>
<% if current_user %>
  <%= link_to "Create Post", new_user_post_path(@user), :style => "display:none", :id => "newpostbttn", :remote => true %>
<%end%>
<div id="container">
  <%= link_to "New Posts", root_path, :id => "newest", :remote => true %>
  <%= link_to "Popular", home_popularposts_path(@posts), :id => "popular", :remote => true %>
  <% unless user_signed_in? %>
    <%= render :partial => "login"%>
  <%end%>
  <div id="paginator">
    <%= paginate @posts, :remote => true %>
  </div>
  <div id="postlist" > 
    <% @posts.each do |s| %>
      <div id="post">
	<p id="title"><%= link_to s.title, post_path(s), :remote => true %></p>
	<p id="post"><%= s.story.html_safe.truncate(90) %></p><br />
	<div id="hinds" >
	    <p id="hinds">Subjects:
	    <% s.hinds.each do |h|%>
	      <%= h.subject + " " %>
	    <%end%>
	    </p>
	</div>
	<p id="author">By: <%= link_to s.author, user_path(s.user_id), :remote => true %></p>
      </div>
      <hr style="opacity: .5;" />
    <%end%>
  </div>
  <div id="rightdiv">  
  </div>
</div>
