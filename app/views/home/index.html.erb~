	<p id="post"><%= s.story.html_safe.truncate(90) %></p><br />
	<div id="hinds" >
	    <p id="hinds">Subjects:
	    <% s.hinds.each do |h|%>
	      <%= h.subject + " " %>
	    <%end%>
	    </p>
	</div>
	<p id="author">By: <%= link_to s.author, user_path(s.user_id), :remote => true %></p>
      </div>
      <hr style="opacity: .5;" />
    <%end%>
  </div>
  <div id="rightdiv">
